import { predefinedWebsiteMixins } from '../../src/website/predefinedWebsiteMixins';
import {
  WebsiteKind,
  WebsiteSize,
  WebsiteType,
} from '../../src/website/websiteTypes';

jest.mock('./websiteTypographyMixin', () => ({
  websiteTypographyMixin: (
    kind: WebsiteKind,
    size: WebsiteSize,
    type: WebsiteType,
  ) => `${kind}/${size}/${type}`,
}));

describe('predefinedWebsiteMixins', () => {
  it('should have proper params according to tree structure', () => {
    Object.keys(predefinedWebsiteMixins).forEach((kind) => {
      const kindBranch =
        predefinedWebsiteMixins[kind as keyof typeof predefinedWebsiteMixins];
      Object.keys(kindBranch).forEach((size) => {
        const sizeBranch = kindBranch[size as keyof typeof kindBranch];
        Object.keys(sizeBranch).forEach((type) => {
          const mixin = sizeBranch[type as keyof typeof sizeBranch];
          expect(mixin).toEqual(`${kind}/${size}/${type}`);
        });
      });
    });
  });
});
