import { mount } from 'enzyme';
import React from 'react';
import { websiteTypographyMixin } from '../../src/website/websiteTypographyMixin';
import { WebsiteTypography } from '../../src/website/WebsiteTypography';

jest.mock('./websiteTypographyMixin');

describe('WebsiteTypography', () => {
  it('should render element with text inside and use typography mixin', () => {
    const wrapper = mount(
      <WebsiteTypography kind="headlines" size="lg" type="contrastInvert">
        Lorem ipsum
      </WebsiteTypography>,
    );

    expect(wrapper.text()).toBe('Lorem ipsum');
    expect(websiteTypographyMixin).toBeCalledWith(
      'headlines',
      'lg',
      'contrastInvert',
    );
  });
});
