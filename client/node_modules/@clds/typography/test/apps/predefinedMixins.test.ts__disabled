import { predefinedMixins } from '../../src/apps/predefinedMixins';
import { TypographySize, TypographyType } from '../../src/apps/types';

jest.mock('./typographyMixin', () => ({
  typographyMixin: (size: TypographySize, type: TypographyType) =>
    `${size}/${type}`,
}));

describe('predefinedWebsiteMixins', () => {
  it('should have proper params according to tree structure', () => {
    Object.keys(predefinedMixins).forEach((size) => {
      const sizeBranch =
        predefinedMixins[size as keyof typeof predefinedMixins];
      Object.keys(sizeBranch).forEach((type) => {
        const mixin = sizeBranch[type as keyof typeof sizeBranch];
        expect(mixin).toEqual(`${size}/${type}`);
      });
    });
  });
});
