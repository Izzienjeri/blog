import { mount } from 'enzyme';
import React from 'react';

import { Typography } from '../../src/apps/Typography';
import { typographyMixin } from '../../src/apps/typographyMixin';

// jest.mock('./typographyMixin');

describe('Typography', () => {
  it('should render element with text inside and use typography mixin size lg', () => {
    const wrapper = mount(
      <Typography size="lg" type="contrastInvert">
        Lorem ipsum
      </Typography>,
    );

    expect(wrapper.text()).to.be('Lorem ipsum');
    expect(typographyMixin).toBeCalledWith(
      expect.objectContaining({ size: 'lg', type: 'contrastInvert' }),
    );
  });

  it('should render element with text inside and use typography mixin size md', () => {
    const wrapper = mount(
      <Typography size="md" type="error">
        Lorem ipsum
      </Typography>,
    );

    expect(wrapper.text()).toBe('Lorem ipsum');
    expect(typographyMixin).toBeCalledWith(
      expect.objectContaining({ size: 'md', type: 'error' }),
    );
  });
});
