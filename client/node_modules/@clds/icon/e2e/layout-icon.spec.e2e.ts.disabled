import { e2eAdapter, testAdapter } from '@cld/e2e-adapter';
import { getSpecifierSelector } from '@cld/e2e-ds-utils';
import { storyUrl } from '@cld/storybook.macro';
import { createIconNextDriver } from '../index';

describe('LayoutIcon', () => {

  beforeEach(async () => {
    await testAdapter.log('Navigate to test page');
    await testAdapter.navigateTo(storyUrl('LayoutIcon/default'));
  });

  async function checkIcon(specifier: string){
    const driver = createIconNextDriver(e2eAdapter, { specifier: getSpecifierSelector(specifier) });
    await testAdapter.log('Check element');
    await driver.compareWithScreenshot(`${specifier} icon`);
  }

  it('should check xs icon', async () => {
    await checkIcon('xs-icon');
  });

  it('should check sm icon', async () => {
    await checkIcon('sm-icon');
  });

  it('should check md icon', async () => {
    await checkIcon('md-icon');
  });

  it('should check 18 size icon', async () => {
    await checkIcon('size-18-icon');
  });

  it('should check lg icon', async () => {
    await checkIcon('lg-icon');
  });

  it('should check 24 size icon', async () => {
    await checkIcon('size-24-icon');
  });

  it('should check xl icon', async () => {
    await checkIcon('xl-icon');
  });

  it('should check 36 size icon', async () => {
    await checkIcon('size-36-icon');
  });

  it('should check xxl icon', async () => {
    await checkIcon('xxl-icon');
  });

  it('should check 48 size icon', async () => {
    await checkIcon('size-48-icon');
  });

});
